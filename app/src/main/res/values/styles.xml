<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for ListView -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for Linear Layout which contains everything -->
    <style name="LinLayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Style for TextView to share the space -->
    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!-- Style for Section TextView Style -->
    <style name="TextViewStyle.Section">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Data information TextView -->
    <style name="TextViewStyle.Data">
        <item name="android:gravity">end</item>
    </style>

    <!-- Style for Linear Layout inside the pricipal Linear Layout-->
    <style name="LinLayInsideStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for TextView for Title of article -->
    <style name="TitleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
    </style>

    <!-- Style for TextView for Time TextView -->
    <style name="TimeTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Style for the Emty TextView -->
    <style name="EmptyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
